LINKERFLAGS = -Xlinker --enable-auto-import

all: izvoriste koder
	
koder: src/koder.cpp koder.conf
	g++ -o output/koder.exe $(LINKERFLAGS) src/koder.cpp

koder.conf:
	@cp src/koder.ini output/koder.ini
	
izvoriste: src/izvoriste.cpp izvoriste.conf setup
	g++ -o output/izvoriste.exe $(LINKERFLAGS) src/izvoriste.cpp
	
izvoriste.conf: src/izvoriste.ini
	@cp src/izvoriste.ini output/izvoriste.ini

setup:
	@-test -d output || mkdir output